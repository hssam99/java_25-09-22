package day15;

import java.util.ArrayList;
import java.util.Scanner;

public class SaleController {
	
	
	ArrayList<Sale> menu = new ArrayList<>();
	ArrayList<Order> orderList = new ArrayList<>();
	Scanner sc = new Scanner(System.in);
	
	
	@SuppressWarnings("unchecked")
	public void makeProductList() {
		menu.add(new Sale("홍씨김밥", 3500));
		menu.add(new Sale("참치김밥", 4500));
		menu.add(new Sale("치즈김밥", 4000));
		menu.add(new Sale("소고기김밥", 5000));
		menu.add(new Sale("떡볶이", 5000));
		menu.add(new Sale("라뽂이", 5000));
	}


	public void addMenu(Scanner sc) {
		System.out.print("상품명 >");
		String productName = sc.next();
		System.out.print("가격 >");
		int price = sc.nextInt();
		
		menu.add(new Sale(productName, price));
		System.out.println("메뉴가 추가되었습니다.");
	}


	public void printMenu() {
		int i = 1;
		System.out.println("--------menu--------");
		for(Sale s : menu) {
			System.out.println(i+"| "+ s.getProductName()+ " \t"+s.getPrice());
			i++;
		}
		System.out.println("[0] 주문 완료");
		System.out.println("---------------------");
	}


	public void order(Scanner sc) {
		printMenu();
		do{
			System.out.print("메뉴선택 > ");
			int input = sc.nextInt();
			
			if(input == 0) {
				return;
			}
			
			System.out.println("수량선택 > ");
			int qty = sc.nextInt();
			
			Order<String, Integer> order = new Order(new Sale(menu.get(input+1)), qty);
			
			orderList.add(order);
			
		}while(true);
		
	
		
		
		
	}


	public void printOrder() {
		// TODO Auto-generated method stub
		
	}


	public void printOption() {
		System.out.println("1. 메뉴추가 | 2. 메뉴보기");
		System.out.println("3. 주문하기 | 4. 주문출력");
		System.out.println("0. 종료");
		System.out.println("---------------------");
	}

}
