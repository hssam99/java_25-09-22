package day17;

import java.io.File;

public class File06 {

	public static void main(String[] args) {
		
		// File 객체 : 경로 + 파일명 + 확장자 + 내용
		// /Users/suminhong/web_0826_hsm/memo/test.txt
		// 파일 구분자 \ / => 운영체제마다 다름 (윈도우, 맥, linux, unix)
		// File.separator : 파일 구분자 생성
		
		final String fileName = "/Users/suminhong/web_0826_hsm/memo";
		File file = new File(fileName);
		
		System.out.println(File.separator);
		File f = new File(file, File.separator+"test.txt");
		
		
		String name = f.getName();
		System.out.println(name);
		

	}

}
