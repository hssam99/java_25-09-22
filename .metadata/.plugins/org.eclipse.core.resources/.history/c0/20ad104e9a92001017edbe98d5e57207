package day15;

import java.util.ArrayList;

public class SaleController {
	
	
	ArrayList<Sale> menu = new ArrayList<>();
	
	
	@SuppressWarnings("unchecked")
	public void makeProductList() {
		menu.add(new Sale("홍씨김밥", 3500));
		menu.add(new Sale("참치김밥", 4500));
		menu.add(new Sale("치즈김밥", 4000));
		menu.add(new Sale("소고기김밥", 5000));
		menu.add(new Sale("떡볶이", 5000));
		menu.add(new Sale("라뽂이", 5000));
	}


	public void addMenu() {
	}


	public void printMenu() {
		int i = 1;
		for(Sale s : menu) {
			System.out.println(i+"| "+ s.getProductName()+ " \t"+s.getPrice());
			i++;
		}
		
	}


