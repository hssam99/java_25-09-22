package day18;

public interface Temp {
	public static void main(String[] args) throws InterruptedException {
		String text = "깜빡깜빡~";

        for (int i = 0; i < 10; i++) { // 깜빡임 10번
            System.out.print("\r" + text); // 보이게
            Thread.sleep(500);             // 0.5초 대기

            System.out.print("\r" + " ".repeat(text.length())); // 사라지게
            Thread.sleep(500);             // 0.5초 대기
        }

        // 반복 끝난 후, 최종적으로 사라진 상태를 그대로 두거나
        System.out.println(); // 한 줄 띄움
    }
}
