package wordBook;

import java.io.IOException;
import java.util.Scanner;


public class WordBookMain {

	public static void main(String[] args) throws IOException {

		//1. 단어등록 | 2. 단어검색 | 3. 단어수정 | 4. 단어출력 | 5. 단어삭제 | 6. 단어를 파일로 출력 | 7. 종료
		
		Scanner sc = new Scanner(System.in);

		int input = 0;
		
		WordBookController wbc = new WordBookController();
		
		
		
		do {
			System.out.println("1. 단어등록 | 2. 단어검색 | 3. 단어수정"
					+ "\n4. 단어출력 | 5. 단어삭제 | 6. 파일출력\n"
					+ "7. 종료 |");
			
			System.out.print(">>");
			try {
				input = sc.nextInt();
				
				
				switch (input) {
				case 1: wbc.addWord(sc); break;
				case 2: wbc.searchWord(sc); break;
				case 3: wbc.UpdateWord(sc); break;
				case 4: wbc.printWord(); break;
				case 5: wbc.deleteWord(sc); break;
				case 6: 
					try {
						wbc.makeWordFile(); break;
					} catch (Exception e) {
						e.printStackTrace();
					}
				case 7: System.out.println("프로그램을 종료합니다."); return;

				default:
					System.out.println("잘못된 숫자를 입력했습니다.");
					break;
				}
			} catch (Exception e) {
				System.err.println("잘못된 값을 입력했습니다.");
			}
			
		}while(input != 7);
	}

}
