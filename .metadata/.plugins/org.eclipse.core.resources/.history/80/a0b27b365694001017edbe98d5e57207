package day17;

import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;

public class FileEx01 {

	public static void main(String[] args) throws IOException {
		
		//1. 단어등록 | 2. 단어검색 | 3. 단어수정 | 4. 단어출력 | 5. 단어삭제 | 6. 단어를 파일로 출력 | 7. 종료
		
		Scanner sc = new Scanner(System.in);
		final String path = "/Users/suminhong/web_0826_hsm/memo/word.txt"; // 경로
		
		FileWriter fw = new FileWriter(path);
		int input = 0;
		
		FileWordController fwc = new FileWordController();
		
		
		
		do {
			
			switch (input) {
			case 1: fwc.addWord(sc); break;
			case 2: fwc.searchWord(); break;
			case 3: fwc.UpdateWord(); break;
			case 4: fwc.printWord(); break;
			case 5: fwc.deleteWord(); break;
			case 6: fwc.makeWordFile(); break;
			case 7: System.out.println("프로그램을 종료합니다."); return;

			default:
				
				break;
			}
			
			
			
			
			
			
			
		}while(input != 7);
		
		
		
		
		
		
		
		
		
		
		
		
		

	}

}
